<h1>Mongo Onion Headline Scraper</h1>

<a href="http://localhost:4020/all"><button id="scrapeBtn">SCRAPE!</button></a>

<br><br>

{{#each results}}
{{#if title}}
{{inc @index}})
<br>
    <p>
        <strong>Title:</strong> {{title}}
        </p>
    <p>
        <strong>Link:</strong> <a target="_blank" href="{{URL}}">{{URL}}</a>
        </p>
    {{#if summary}}
    <p> 
        <strong>Summary:</strong> {{summary}}
        </p>
    {{else}}
    <p> 
        <strong>Summary:</strong> Pretty self explanatory, ain't it?
        </p>
    {{/if}}
    <p>   
        <strong>Image:</strong> 
        </p>
    <p>
        <img src="{{image}}">
        </p>
    <form>
        <div class="form-group">
            <label for="note"><strong>Notes: </strong></label>
            <textarea data-id="{{inc @index}}" class="form-control" placeholder="Type any notes about this article here" type="text"name="note" id="note"></textarea>
        </div>
    </form>
    <hr>
{{/if}}
{{/each}}

